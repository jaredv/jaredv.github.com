@import 'https://fonts.googleapis.com/css?family=Monoton'

_bg = #EEE
_text-dim = #DDD
_text = #CCC
_text-highlight = #AAA
_text-plus = #AAA

body
    padding: 0
    margin: 0
    background: _bg
    color: _text
    font-family: sans-serif

a, a:visited, a:active
    color: _text
    text-decoration: none

a:hover
    color: _text-highlight

header
    position: fixed
    top: 0
    width: 100%
    vertical-align: middle
    background: rgba(238,238,238, 0.8)
    z-index: 10

    h1
        float: left
        font-family: 'Monoton', sans-serif
        font-size: 1.2em
        padding: 0
        margin: 10px
        color: _text-plus

    nav
        float: right
        margin: 13px 15px

        a
            margin-left: 15px
            font-size: 1.3em

h1.jumbo
    font-family: 'Monoton', sans-serif
    text-align: center
    font-size: 12vw
    margin-top: 25vh
    color: _text-dim
    // transition: all 1s ease-in-out

    animation: color_change 1s infinite alternate

@keyframes color_change
    from
        color: _text
    to
        color: _text-dim
h1.jumbo:hover
    color: _text
