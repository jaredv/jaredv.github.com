@import 'https://fonts.googleapis.com/css?family=Monoton'

body
    padding: 0
    margin: 0
    font-family: 'Monoton', cursive
    background: #EEE
    color: #CCC

nav
    margin: 10px 15px

    a
        margin-right: 15px
        font-size: 1.2em

a
    color: #CCC
    text-decoration: none

a:hover
    color: #BBB

h1
    text-align: center
    font-size: 12vw
    margin-top: 25vh
    color: #DDD
    transition: all 1s ease-in-out

h1:hover
    color: #CCC
